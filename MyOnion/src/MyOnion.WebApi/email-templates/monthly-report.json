{
  "id": "monthly-report",
  "name": "Monthly Department Report",
  "description": "Monthly summary report for department managers",
  "category": "Reports",
  "subjectTemplate": "{{ department.name }} Monthly Report - {{ report.month }} {{ report.year }}",
  "bodyTemplate": "<!DOCTYPE html>\n<html>\n<head>\n  <style>\n    body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }\n    .header { background-color: #9C27B0; color: white; padding: 20px; text-align: center; }\n    .content { padding: 20px; }\n    .stat-card { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px; border-radius: 8px; margin: 10px 0; }\n    .stat-number { font-size: 32px; font-weight: bold; margin: 10px 0; }\n    .stat-label { font-size: 14px; opacity: 0.9; }\n    table { width: 100%; border-collapse: collapse; margin: 20px 0; }\n    th { background-color: #9C27B0; color: white; padding: 12px; text-align: left; }\n    td { padding: 10px; border-bottom: 1px solid #ddd; }\n    .footer { background-color: #f4f4f4; padding: 20px; text-align: center; font-size: 12px; color: #666; }\n  </style>\n</head>\n<body>\n  <div class=\"header\">\n    <h1>{{ department.name }} Monthly Report</h1>\n    <p>{{ report.month }} {{ report.year }}</p>\n  </div>\n  <div class=\"content\">\n    <p>Hi {{ manager.first_name }},</p>\n    <p>Here's your monthly summary for {{ department.name }}:</p>\n\n    <h3>Key Metrics</h3>\n    <div class=\"stat-card\">\n      <div class=\"stat-label\">Total Employees</div>\n      <div class=\"stat-number\">{{ metrics.total_employees }}</div>\n    </div>\n    <div class=\"stat-card\">\n      <div class=\"stat-label\">New Hires</div>\n      <div class=\"stat-number\">{{ metrics.new_hires }}</div>\n    </div>\n    <div class=\"stat-card\">\n      <div class=\"stat-label\">Average Salary</div>\n      <div class=\"stat-number\">${{ metrics.avg_salary }}</div>\n    </div>\n\n    <h3>Top Performers</h3>\n    <table>\n      <thead>\n        <tr>\n          <th>Name</th>\n          <th>Position</th>\n          <th>Performance Score</th>\n        </tr>\n      </thead>\n      <tbody>\n        {{ for performer in top_performers }}\n        <tr>\n          <td>{{ performer.name }}</td>\n          <td>{{ performer.position }}</td>\n          <td>{{ performer.score }}%</td>\n        </tr>\n        {{ end }}\n      </tbody>\n    </table>\n\n    <h3>Action Items</h3>\n    <ul>\n      {{ for item in action_items }}\n      <li>{{ item }}</li>\n      {{ end }}\n    </ul>\n\n    <p>For detailed analytics, visit your <a href=\"{{ dashboard_url }}\">manager dashboard</a>.</p>\n\n    <p>Best regards,<br>The Analytics Team</p>\n  </div>\n  <div class=\"footer\">\n    <p>&copy; {{ current_year }} {{ company_name }}. All rights reserved.</p>\n  </div>\n</body>\n</html>",
  "from": "reports@myonion.com",
  "requiredVariables": [
    "manager.first_name",
    "department.name",
    "report.month",
    "report.year",
    "metrics.total_employees",
    "metrics.new_hires",
    "metrics.avg_salary",
    "dashboard_url",
    "company_name",
    "current_year"
  ],
  "exampleVariables": {
    "manager.first_name": "Robert",
    "department.name": "Engineering",
    "report.month": "February",
    "report.year": "2026",
    "metrics.total_employees": "47",
    "metrics.new_hires": "3",
    "metrics.avg_salary": "95000",
    "dashboard_url": "https://analytics.myonion.com/dashboard",
    "company_name": "MyOnion Corp",
    "current_year": "2026"
  }
}
